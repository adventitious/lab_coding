<Window x:Class="ComputerGames.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ComputerGames"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>

        <Grid>

            <ListBox x:Name="lbxGames" HorizontalAlignment="Left" Height="280" Margin="70,70,0,0" VerticalAlignment="Top" Width="180" SelectionChanged="lbxGames_SelectionChanged"/>
            <ListBox x:Name="lbxCharacters" HorizontalAlignment="Left" Height="280" Margin="300,70,0,0" VerticalAlignment="Top" Width="180" SelectionChanged="lbxCharacters_SelectionChanged"/>
            <Image x:Name="imgCharacter" HorizontalAlignment="Left" Height="200" Margin="540,70,0,0" VerticalAlignment="Top" Width="200"/>

        </Grid>
    </Grid>
</Window>

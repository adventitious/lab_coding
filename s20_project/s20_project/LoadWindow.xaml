<Window x:Class="s20_project.LoadWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:s20_project"
        mc:Ignorable="d"
        Title="Load" Height="210" Width="400" Background="#ccccee" Loaded="Window_Loaded" >

    <Grid>
        <Button x:Name="Btn_LoadJson" Content="Load from JSON object"  Height="30"  VerticalAlignment="Top" Margin="12,12,12,0" Click="Btn_LoadJson_Click" FontSize="14" />
        <Button x:Name="Btn_LoadFromDb" Content="Read from Database"  Height="30"  VerticalAlignment="Bottom" Margin="12,0,12,12" FontSize="14" Click="Btn_LoadFromDb_Click" />

        <Label Content="Database Connection String" Margin="12,0,0,76" HorizontalAlignment="Left" FontSize="16" VerticalAlignment="Bottom" Height="36"/>
        <TextBox x:Name="AddName" Height="26" Margin="12,0,12,50"   TextWrapping="Wrap" Text="" FontSize="16" VerticalAlignment="Bottom"/>

    </Grid>

</Window>
